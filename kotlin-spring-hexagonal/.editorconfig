root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{*.yaml,*.yml}]
indent_size = 2
indent_style = space
ij_yaml_keep_indents_on_empty_lines = false
ij_yaml_keep_line_breaks = true

[{*.kt, *.kts}]
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL
ij_continuation_indent_size = 8

[*.groovy]
ij_groovy_class_count_to_use_import_on_demand = 99
ij_groovy_names_count_to_use_import_on_demand = 99
ij_groovy_spaces_within_for_parentheses = true
ij_groovy_spaces_within_if_parentheses = true
ij_groovy_spaces_within_while_parentheses = true
ij_groovy_spaces_within_switch_parentheses = true

[*.md]
max_line_length = 999
